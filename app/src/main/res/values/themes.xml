<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastECommerce" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C6CBFF</item>
        <item name="colorPrimaryVariant">#C6CBFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FastECommerce.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/euclid_regular</item>
        <item name="buttonStyle">@style/Theme.FastECommerce.Button</item>
    </style>

    <style name="Theme.FastECommerce.Button">
        <item name="fontFamily">@font/euclid_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">100dp</item>
    </style>

</resources>